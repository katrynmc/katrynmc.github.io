.nav {
  width: 100%
  position: absolute
  z-index: 100
}

.header {
  position: fixed
  width: 100%
  height: 10%
  left: 10px
  padding-top: 17px;

  .name {
    font-size: 1.6em;
    line-height: 1.3
    color: $white
    letter-spacing: 0.065em
    font-family: 'Roboto', sans-serif;
    font-weight: 400
    padding-left: 20px
    text-align: left
    a {
      text-decoration: none
      color: $white
    }
  }
}

.section {
  position: fixed
  right: 53px
  top: 60px
  font-family: 'Roboto', sans-serif;
  font-weight: 400
  font-size: 0.9em
  a {
    text-decoration: none
    color: $darkest-grey
  }
  &.art{
    right: 186px
  }
}
