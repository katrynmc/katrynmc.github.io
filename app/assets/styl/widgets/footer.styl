.footer {
  bottom: 0
  font-size: $type-small
  height: 1.25em
  padding: 20px 32px
  position: fixed
  width: 100vw

  .email {
    color: $darkest-grey
    display: inline-block
    font-family: $serif
    letter-spacing: $sans-serif-letterspacing
    &:hover {
      color: $secondary-color-0
    }
  }

  .sparkle {
    display: inline-block
    padding-right: 0.5em
    padding-bottom: 4px
    color: $primary-color-1
  }
}
