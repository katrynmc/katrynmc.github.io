.two {
  display: inline-block

  .gallery-header-row {
    width: 100%
    height: 8%
  }

  .indices {
    position: relative
    display: flex
    flex-wrap: wrap
    justify-content: space-between
    align-content: flex-end
  }

  .portfolio-index {
    width: 30px
    margin: 10px
  }

  .selected-panel {
    width: 100%
    height: 60%
  }

  .gallery-wrapper {
    margin-top: 20px
    display: inline-block
    position: absolute
  }

  .gallery {
    position: relative
    display: flex
    flex-wrap: wrap
    justify-content: space-between
    align-content: flex-start
  }

  .portfolio-item {
    height: 200px
    margin: 0 10px
  }

  .portfolio-large {
    display: inline-block
  }

  .details-panel {
    margin-left: 75px
    width: 50%
    display: inline-block
    vertical-align: top
  }

  .sidebar {
    margin-top: 20px
    width: 20vw;
    height: 30%
    display: inline-block

    .sidebar-header {
      color: #cccccc
      font-size: 3em
    }
    .filters {

    }
    .filter-bullet {
      padding-right: 8px
    }
    .filter-option {
      font-family: 'Source Code Pro', monospace
      list-style-position: outside
      font-size: 0.75em
      margin-bottom: 8px
      &:hover {
        color: red
      }
    }
  }
}


