.home {
  .container-left {
    position: absolute
    z-index: -2
    background-color: #cc99cc
    width: 50vw
    height: 100%
    float: left
    box-shadow: inset 4px 6px 10px 0px rgba(0,0,0,0.37)
  }

  .container-right {
    position: absolute
    z-index: -2
    right: 0
    width: 50vw
    height: 100%
    background-color: #c1c0c0
    box-shadow: inset 0px 4px 10px 0px rgba(0,0,0,0.37)
  }

  .background-triangle {
    position: absolute
    z-index: -1
    top: 0
    width: 0
    height: 0
    border-bottom: 100vh solid rgba(255, 205, 153, 0.25)
    border-right: 88vh solid transparent

    &.left {
      border-right: 0
      z-index: -1
      border-left: 88vh solid transparent
      border-bottom: 100vh solid rgba(153, 255, 246, 0.25)
    }
  }

  .faces {
    fixed: bottom
    right: 50vw
    margin-right: 3px
  }

  .face {
    position: relative
    float: right
    width: 33%

    &.two {
      left: 100px
    }
    &.three {
      left: 13.5vw
    }
  }

  .profession {
    color: $white
    font-size: 4.3em
    font-family: 'Roboto', sans-serif
    font-weight: 100;
    margin-left: 1em
    line-height: 1.2

    &.art {
      margin-top: 45px
    }
  }

  .main-card {
    position: relative
    height: 40vh
    width: 35vw
    margin-top: 20vh
    margin-right: 3px
    float: right
  }

  .bio {
    position: relative
    height: 40vh
    width: 30vw
    margin-top: 310px
    font-family: 'Roboto', sans-serif
    color: $darkest-grey
    font-size: 1em
    line-height: 2
    margin-left: 35px
  }

  .container {
    border-top: 25px solid #4d5867
    display: inline-block
    width: 49%
    background-color: #4d5867
  }
}
