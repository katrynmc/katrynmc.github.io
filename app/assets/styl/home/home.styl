.home {
  width: 70%
  float: right
  padding: 20px 90px 0 0

  .bio {
    .front-image {
      float: right
      height: 100px
      width: 100px
    }

    .profession {
      color: $pink
      font-size: 4.3em
      font-family: $san-serif
      font-style: italic
      font-weight: 600
      line-height: 1.2

      .darken {
        color: $dark-pink
      }

      &:last-of-type {
        padding-top: 0
        margin-bottom: 36px
      }
    }

    .company {
      font-style: italic
    }
  }
}
