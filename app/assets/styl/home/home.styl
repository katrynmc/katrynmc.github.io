$keyframe-name = fadein

.left-half {
  height: 36vh
  display: block
  font-family: 'Source Code Pro', monospace;
  font-size: 3.5em
  color: #56708c
  text-align: center
  padding-top: 20vh
  background-color: #e8e5e5
  transition: background-color 0.4s

  &:hover {
    background-color: #dfe0ea;
  }
}

.container {
  display: inline-block
  width: 49%
  background-color: #4d5867
}

.right-half {
  height: 36vh
  font-size: 3.5em
  font-family: 'Source Code Pro', monospace;
  display: block
  padding-top: 20vh
  color: #e69e9e
  text-align: center
  background-color: #e8dada
  transition: background-color 0.4s;

  &:hover {
    background-color: #e2c7cf
  }

  @keyframes {$keyframe-name} {
    for i in 0..10 {
      {10% * i}
        opacity (i/10)
    }
  }
}

.pull-right {
  float: right
}

.short-bio {
  position: relative
  background-color: #4d5867
  color: #f7f7f7
  display: inline-block
  font-family: 'Source Code Pro', monospace;
  line-height: 1.5
  padding: 5px 15px
  transition: background-color 0.4s;
  a {
    color: white;
  }
  &:hover {
    background-color: $darkest-grey
  }
}

.cta{
  display: block
  background-color: #9977bd
  color: #f7f7f7
  display: inline-block
  font-family: 'Source Code Pro', monospace;
  line-height: 1.5
  padding: 5px 15px
}

.interface {
  height: 89vh
  padding-top: 70px;
  width: 100%
}

.home-eyes {
  position: absolute
}

.home-sketch {
  position: absolute
  left: 465px;
}

.portfolio-img {
  position: absolute
  right: 70px
  margin: 70px 20px 0 0
  padding: 0 10px 30px 10px
}

.second-layer {
  margin-top: 600px
}

.example-enter {
  opacity: 0.01;
}

.example-enter.example-enter-active {
  opacity: 1;
  transition: opacity 500ms ease-in;
}

.example-leave {
  opacity: 1;
}

.example-leave.example-leave-active {
  opacity: 0.01;
  transition: opacity 300ms ease-in;
}
