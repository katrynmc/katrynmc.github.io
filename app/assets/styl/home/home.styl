.home {
  .bio {
    position: relative
    width: 50vw
    margin: 0 auto
    padding-top: 50px

    .front-image {
      float: right
      height: 100px
      width: 100px
    }

    .profession {
      color: $pink
      font-size: 4.3em
      font-family: $san-serif
      font-style: italic
      font-weight: 600
      line-height: 1.2
      margin-left: -6px
      .darken {
        color: $dark-pink
      }

      &:last-of-type {
        padding-top: 0
        margin-bottom: 36px
      }
    }

    .company {
      font-style: italic
    }
  }
}
