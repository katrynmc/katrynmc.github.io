h1, h2, h3, h4, h5, h6 {
  font-family: $sans-serif
}

h1 {
  font-size: $type-x-large
  color: $primary-color-0
  margin-bottom: 10px
}

h2 {
  font-size: $type-large
  margin-bottom: 10px
}

h3 {
  font-size: 1.5em
  margin-bottom: 24px
}

h4 {
  font-size: 1.125em
  margin-bottom: 10px
}

h5 {
  font-size: $type-medium
  margin-bottom: 10px
}

h6 {
  letter-spacing: 1
  font-size: 0.75em
  margin-bottom: 10px
}

p {
  color: $darkest-grey
  font-family: $serif
  font-size: 1.5em
  line-height: 1.5
}

a {
  text-decoration: none
}

li {
  font-family: $serif
  font-size: $type-medium
}

body {
  background-color: #f5f5f5
}

#app {
  box-shadow: inset 0 3px 14px 0 rgba(0,0,0,0.19)
  background-color: $light-grey
  width: 100vw
}

.main-interface {
  padding-top: 15vh
}

