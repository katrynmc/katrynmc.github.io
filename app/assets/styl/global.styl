h1, h2, h3, h4, h5, h6 {
  font-family: 'VT323', monospace;
}
h1 {
  font-family: 'Source Code Pro', monospace;
  font-size: 3em
  margin-bottom: 10px
}
h2 {
  font-family: 'VT323', monospace
  font-size: 2.25em
  margin-bottom: 10px
}
h3 {
  font-family: 'Montserrat', sans-serif
  font-size: 1.75em
  margin-bottom: 24px
}
h4 {
  font-size: 1.125em
  margin-bottom: 10px
}
h5 {
  font-size: 1em
  margin-bottom: 10px
}
h6 {
  font-family: 'Montserrat', sans-serif
  letter-spacing: 1
  color: #9977bd
  font-size: 0.75em
  margin-bottom: 10px
}

p {
  font-family: 'Source Code Pro', monospace;
  font-size: 1em;
  line-height: 1.5;
}

a {
  text-decoration: none
}

li {
  font-family: 'Montserrat', sans-serif
  font-size: 1em;
}

.portfolio-site {
  background-color: #f7f7f7
  margin: 0 20px
}

main{
  padding: 0 30px
}

.right{
  padding-right: 20px
  height: 100%
  float: right
}

footer {
  position: fixed
  background-color: white
  height: 4vh
  width: 100%
  bottom: 0
}
