h1, h2, h3, h4, h5 {
  font-family: $sans-serif
}

body {
  font-family: $sans-serif
  color: $darkest-grey
}

h1 {
  font-size: $type-x-large
  color: $primary-color-0
  margin-bottom: 10px
}

h2 {
  font-size: $type-large
  margin-bottom: 10px
}

h3 {
  color: $black
  font-size: $type-medium
  margin-bottom: $large-space
}

h4 {
  font-size: 1.125em
  margin-bottom: 10px
}

h5 {
  color: $secondary-color-0
  font-size: $type-xx-small
  margin-bottom: $tiny-space
}

h6 {
  color: $med-grey
  font-family: $serif
  font-size: $type-small
  letter-spacing: $serif-letterspacing
  margin-bottom: $tiny-space
}

p {
  color: $darkest-grey
  font-family: $sans-serif
  font-size: $type-xx-small
  line-height: 1.5
}

a {
  text-decoration: none
}

li {
  font-family: $serif
  font-size: $type-medium
}

body {
  background-color: #f5f5f5
}

#app {
  box-shadow: inset 0 3px 14px 0 rgba(0,0,0,0.19)
  background-color: $light-grey
  width: 100vw
}

.main-view {
  float: right
  width: $main-content-width
  padding: $main-content-margin-top $main-content-margin-right 0 0
}

