.gallery-header-row {
  width: 100%
  height: 8%
}

.indices {
  position: relative
  display: flex
  flex-wrap: wrap
  justify-content: space-between
  align-content: flex-end
}

.portfolio-index {
  width: 30px
  margin: 10px
}
.effect7 {
  padding: 10px
  margin: 5px
  box-shadow: 3px 3px rgba(189, 209, 255, 0.31)
  background-color: #f9f9f9
}
.selected-panel {
  width: 100%
  height: 60%
}

.gallery-wrapper {
  margin-top: 20px
  display: inline-block
  position: absolute
}

.gallery {
  background-color: #f5f5f5
  padding: 0 6vw 100px 9vw
  display: flex
  flex-wrap: wrap
  justify-content: space-between
  align-content: flex-start
}

.portfolio-item {
  height: 200px
  margin: 0 10px
}

.details-panel {
  width: 20vw;
  margin-top: 95px;
}
