{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "outDir": "./build/",
    "sourceMap": true,
    "module": "ES2015",
    "moduleResolution": "Node",
    "noUnusedLocals": true,
    "target": "es6",
    "jsx": "react",
    "paths": {
      "app/*": ["./src/*"]
    },
    "rootDirs": ["src"],
    "strict": true
  }
}
